<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeightLarge">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/img_tagihan"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_ubp_pln"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:id="@+id/layout_body_tagihan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_toEndOf="@id/img_tagihan"
                android:layout_toRightOf="@id/img_tagihan">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_tagihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/material_text_color_black_text"
                    android:textSize="@dimen/_13ssp"
                    android:autoSizeMinTextSize="@dimen/_13ssp"
                    android:autoSizeMaxTextSize="@dimen/_100ssp"
                    android:autoSizeStepGranularity="@dimen/_2ssp"
                    tools:text="PLN"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.49"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/material_text_color_black_text"
                        android:textSize="@dimen/_12ssp"
                        android:autoSizeMinTextSize="@dimen/_12ssp"
                        android:autoSizeMaxTextSize="@dimen/_100ssp"
                        android:autoSizeStepGranularity="@dimen/_2ssp"
                        android:text="ID Pelanggan" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.02"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/material_text_color_black_text"
                        android:textSize="@dimen/_12ssp"
                        android:autoSizeMinTextSize="@dimen/_12ssp"
                        android:autoSizeMaxTextSize="@dimen/_100ssp"
                        android:autoSizeStepGranularity="@dimen/_2ssp"
                        android:text=":" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/body_cust_id"
                        android:layout_weight="0.49"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/material_text_color_black_text"
                        android:textSize="@dimen/_12ssp"
                        android:autoSizeMinTextSize="@dimen/_12ssp"
                        android:autoSizeMaxTextSize="@dimen/_100ssp"
                        android:autoSizeStepGranularity="@dimen/_2ssp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="5dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.49"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/material_text_color_black_text"
                        android:textSize="@dimen/_12ssp"
                        android:autoSizeMinTextSize="@dimen/_12ssp"
                        android:autoSizeMaxTextSize="@dimen/_100ssp"
                        android:autoSizeStepGranularity="@dimen/_2ssp"
                        android:text="Tagihan" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="0.02"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/material_text_color_black_text"
                        android:textSize="@dimen/_12ssp"
                        android:autoSizeMinTextSize="@dimen/_12ssp"
                        android:autoSizeMaxTextSize="@dimen/_100ssp"
                        android:autoSizeStepGranularity="@dimen/_2ssp"
                        android:text=":" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/body_cust_tagihan"
                        android:layout_weight="0.49"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/material_text_color_black_text"
                        android:textSize="@dimen/_12ssp"
                        android:autoSizeMinTextSize="@dimen/_12ssp"
                        android:autoSizeMaxTextSize="@dimen/_100ssp"
                        android:autoSizeStepGranularity="@dimen/_2ssp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/material_color_grey_300"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </FrameLayout>
</layout>