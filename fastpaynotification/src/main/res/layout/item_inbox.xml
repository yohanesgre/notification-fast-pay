<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<com.balysv.materialripple.MaterialRippleLayout
			android:id="@+id/ripple_parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="?android:attr/listPreferredItemHeightLarge">
			<FrameLayout
				android:id="@+id/parent"
				android:clickable="true"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<RelativeLayout
					android:id="@+id/front_view"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingBottom="@dimen/margin_bottom"
					android:paddingTop="@dimen/margin_top">
					<FrameLayout
						android:id="@+id/image_cont"
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:layout_alignParentLeft="true"
						android:layout_alignParentStart="true"
						android:layout_centerInParent="true"
						android:layout_marginLeft="@dimen/margin_left"
						android:layout_marginStart="@dimen/margin_left">
						<androidx.appcompat.widget.AppCompatImageView
							android:id="@+id/left_image"
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:scaleType="fitCenter"
							android:layout_gravity="center"/>
						<androidx.appcompat.widget.AppCompatImageView
							android:id="@+id/left_image_unread"
							android:layout_width="8dp"
							android:layout_height="8dp"
							android:src="@drawable/circle_red"
							android:scaleType="fitCenter"
							android:layout_gravity="right|top"
							android:layout_margin="5dp"/>
						<androidx.appcompat.widget.AppCompatImageView
							android:visibility="gone"
							android:id="@+id/left_selected"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="@drawable/image_round_selected"
							android:src="@drawable/ic_check_white_24dp"
							android:scaleType="fitCenter"/>
					</FrameLayout>

					<LinearLayout
						android:id="@+id/title_container"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:layout_marginLeft="@dimen/margin_left"
						android:layout_marginStart="@dimen/margin_left"
						android:layout_marginRight="@dimen/margin_right"
						android:layout_marginEnd="@dimen/margin_right"
						android:layout_toEndOf="@id/image_cont"
						android:layout_toRightOf="@id/image_cont"
						android:orientation="vertical"
						android:clipToPadding="false">
						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/title"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:ellipsize="end"
							android:maxLines="1"
							android:fontFamily="@font/roboto_bold"
							android:textColor="@color/material_text_color_black_text"
							android:textSize="@dimen/_13ssp"
							android:autoSizeMinTextSize="@dimen/_13ssp"
							android:autoSizeMaxTextSize="@dimen/_100ssp"
							android:autoSizeStepGranularity="@dimen/_2ssp"
							tools:text="Title"/>
						<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/subtitle"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="2dp"
							android:ellipsize="end"
							android:lines="2"
							tools:text="Subtitle"
							android:clipToPadding="false"
							android:fontFamily="@font/roboto_regular"
							android:textColor="@color/material_text_color_black_text"
							android:textSize="@dimen/_12ssp"
							android:autoSizeMinTextSize="@dimen/_13ssp"
							android:autoSizeMaxTextSize="@dimen/_100ssp"
							android:autoSizeStepGranularity="@dimen/_2ssp"/>
					</LinearLayout>
				</RelativeLayout>
			</FrameLayout>
		</com.balysv.materialripple.MaterialRippleLayout>
		<View
			android:id="@+id/divider"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/material_color_grey_400"
			android:layout_gravity="center_horizontal|bottom" />
	</LinearLayout>
</layout>